<Window x:Class="P15_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="320" Width="480" FontSize="13" Loaded="Window_Loaded">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Margin="3">
            <Label>请选择要操作的数据表格:</Label>
            <ComboBox Name="comboBox1" Width="150" SelectionChanged="comboBox1_SelectionChanged" />
            <Button Name="button1" Content="保存" Width="60" Margin="5" Click="button1_Click" />
        </WrapPanel>
        <DataGrid Name="dataGrid1"></DataGrid>
    </DockPanel>
</Window>
